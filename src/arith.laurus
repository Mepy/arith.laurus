LIT = Int::from_str([0-9]|[1-9][0-9]*)
ADD = (\+)
SUB = (\-)
MUL = (\*)
DIV = (\/)
POW = (\^)
LParen = (\()
RParen = (\))

%space ([\s\t\n]*)
%start expr

expr : Expr {
| Add(expr ADD expr)
| Sub(expr SUB expr)
< Mul(expr MUL expr)
| Div(expr DIV expr) 
< @right Pow(expr POW expr)
< Lit(LIT)
| (LParen expr RParen)
}